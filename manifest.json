{
  "name": "RTT - Real Time Tracker",
  "version": "0.0.0",
  "manifest_version": 2,
  "description": "",
  "browser_action": {
    "default_title": "Auth0",
    "default_popup": "src/browser_action/login.html",
    "default_icon": {
      "128": "src/assets/icons/icon128.png"
    }
  },
  "options_page": "src/options/privacy-policy.html",
  "background": {
    "scripts": [
      "./env.js",
      "./node_modules/auth0-chrome/dist/auth0chrome.min.js",
      "./node_modules/jwt-decode/build/jwt-decode.js",
      "./src/main.js"
    ],
    "persistent": false
  },
  "permissions": [
    "identity",
    "notifications",
    "storage",
    "tabs",
    "https://*.auth0.com/*",
    "http://*.localhost:3000/*"
  ]
}
